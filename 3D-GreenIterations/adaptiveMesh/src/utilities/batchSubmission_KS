#!/bin/bash

DOMAIN=10
MINDEPTH=3
MAXDEPTH=14
ORDER=5
SINGSUBT=1
SMOOTHINGN=0
SMOOTHINGEPS=0.0
MESHTYPE='LW3'
MESHPARAM=50
RESIDUAL=1e-7
COORDINATES='../src/utilities/molecularConfigurations/hydrogenMolecule.csv'
OUTFILE='/home/njvaughn/results_07_04/hydrogen.csv'
VTKFILE='/home/njvaughn/results_07_04/phiFields.vtk'

cd /home/njvaughn/Greens-Functions-Iterative-Methods/3D-GreenIterations/adaptiveMesh/KohnShamTests

MESHPARAM=50
python testBatchGreenIterations_KS.py $DOMAIN $MINDEPTH $MAXDEPTH $ORDER $SINGSUBT \
	$SMOOTHINGN $SMOOTHINGEPS $MESHTYPE $MESHPARAM $RESIDUAL \
	$COORDINATES $OUTFILE $VTKFILE
	
MESHPARAM=100
python testBatchGreenIterations_KS.py $DOMAIN $MINDEPTH $MAXDEPTH $ORDER $SINGSUBT \
	$SMOOTHINGN $SMOOTHINGEPS $MESHTYPE $MESHPARAM $RESIDUAL \
	$COORDINATES $OUTFILE $VTKFILE
	
MESHPARAM=200
python testBatchGreenIterations_KS.py $DOMAIN $MINDEPTH $MAXDEPTH $ORDER $SINGSUBT \
	$SMOOTHINGN $SMOOTHINGEPS $MESHTYPE $MESHPARAM $RESIDUAL \
	$COORDINATES $OUTFILE $VTKFILE
	
MESHPARAM=400
python testBatchGreenIterations_KS.py $DOMAIN $MINDEPTH $MAXDEPTH $ORDER $SINGSUBT \
	$SMOOTHINGN $SMOOTHINGEPS $MESHTYPE $MESHPARAM $RESIDUAL \
	$COORDINATES $OUTFILE $VTKFILE


