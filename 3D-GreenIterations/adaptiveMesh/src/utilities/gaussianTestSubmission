SMOOTHINGN=0
SMOOTHINGEPS=0
INTRASCFTOLERANCE=1e-3
INTERSCFTOLERANCE=1e-5
INPUTFILE='../src/utilities/molecularConfigurations/dummyAtomAuxiliary.csv'
#INPUTFILE='../src/utilities/molecularConfigurations/noAtomsAuxiliary.csv'
OUTPUTFILE='/home/njvaughn/HartreeTests/GaussianSingularitySubtraction/GaussianDensity_alpha2_domain5/runComparison.csv'
