	for THETA in 0.8 0.9
	do
		OUTPUTFILE="/home/njvaughn/synchronizedDataFiles/krasnyMeshTests/Oxygen_treecode/ds_krasnyRefine_tcOrder${TREECODEORDER}_theta${THETA}.csv"
