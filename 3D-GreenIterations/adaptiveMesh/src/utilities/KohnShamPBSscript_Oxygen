if [ -s "$PBS_NODEFILE" ] ; then
    echo "Running on"
    uniq -c $PBS_NODEFILE
fi

if [ -d "$PBS_O_WORKDIR" ] ; then
    cd $PBS_O_WORKDIR
    echo "Running from $PBS_O_WORKDIR"
fi



#!/bin/bash
cd /home/njvaughn/Greens-Functions-Iterative-Methods/3D-GreenIterations/adaptiveMesh/KohnShamTests

DOMAIN=20
MAXDEPTH=20
MINDEPTH=3
SINGSUBT=1
SMOOTHINGN=0
SMOOTHINGEPS=0
INTRASCFTOLERANCE=1e-6
INTERSCFTOLERANCE=1e-6

INPUTFILE='../src/utilities/molecularConfigurations/oxygenAtomAuxiliary.csv'


GRADIENTFREE='True'


ORDER=5
MESHTYPE='LW5'
MESHPARAM=1000


MIXINGPARAMETER=0.5


INTRASCFTOLERANCE=1e-7
INTERSCFTOLERANCE=1e-6

MIXING='Anderson'	

OUTPUTFILE='/home/njvaughn/oxygen_with_anderson/LW5_1000_andersonMixing_p5_1em76.csv'
python -u testBatchGreenIterations_KS.py $DOMAIN $MINDEPTH $MAXDEPTH $ORDER $SINGSUBT \
	$SMOOTHINGN $SMOOTHINGEPS $MESHTYPE $MESHPARAM $INTERSCFTOLERANCE $INTRASCFTOLERANCE \
	$OUTPUTFILE $INPUTFILE $VTKFILEDIR $GRADIENTFREE $MIXING $MIXINGPARAMETER
	
MIXING='Simple'	

OUTPUTFILE='/home/njvaughn/oxygen_with_anderson/LW5_1000_simpleMixing_p5_1em76.csv'
python -u testBatchGreenIterations_KS.py $DOMAIN $MINDEPTH $MAXDEPTH $ORDER $SINGSUBT \
	$SMOOTHINGN $SMOOTHINGEPS $MESHTYPE $MESHPARAM $INTERSCFTOLERANCE $INTRASCFTOLERANCE \
	$OUTPUTFILE $INPUTFILE $VTKFILEDIR $GRADIENTFREE $MIXING $MIXINGPARAMETER
	
