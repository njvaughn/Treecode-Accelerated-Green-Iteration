FINAL_GI_TOLERANCE=3e-5
GRADUALSTEPS=4
SCF_TOLERANCE=1e-4
     


MAXSIDELENGTH=6


MESHTYPE='PiecewiseUniform' 
MESHPARAM1=2.0 # near field spacing
MESHPARAM2=1.0 # near field cutoff

MESHPARAM3=3.0 # mid field spacing
